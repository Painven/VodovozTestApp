<Application x:Class="VodovozTestApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:VodovozTestApp.Infrastructure.Converters">
    <Application.Resources>
        
        <ResourceDictionary>
            <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Brushes.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Resources/Buttons.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Resources/GeneralStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Resources/Icons.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
